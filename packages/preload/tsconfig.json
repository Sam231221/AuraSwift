{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../*"],
      "../main/src/database/schema.js": ["../main/src/database/schema.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts",
    "../shared/src/types/db.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}

{
  "name": "auraswift",
  "description": "AuraSwift is the pos software for supermarket.",
  "version": "1.6.0",
  "private": true,
  "type": "module",
  "author": {
    "email": "sameershahithakuri123@gmail.com",
    "name": "Sameer Shahi",
    "url": "https://sameershahithakuri.vercel.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sam231221/AuraSwift.git"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace @app/renderer && npm run build --workspace @app/main && npm run build --workspace @app/preload",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "postinstall": "electron-rebuild",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "test:clean": "npm run db:dev:clean && npx playwright test ./tests/e2e.spec.ts",
    "test:hardware": "npx playwright test ./tests/hardware-integration.spec.ts",
    "test:all": "npx playwright test ./tests/",
    "test:all:clean": "npm run db:dev:clean && npx playwright test ./tests/",
    "start": "node packages/dev-mode.js",
    "typecheck": "npm run typecheck -ws --if-present",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "npm start --workspace @app/integrate-renderer",
    "init": "npm run create-renderer && npm run integrate-renderer && npm install",
    "semantic-release": "semantic-release",
    "semantic-release:dry-run": "semantic-release --dry-run",
    "db:dev:clean": "rm -f data/pos_system.db* && echo 'Development database cleaned'",
    "db:dev:backup": "cp data/pos_system.db data/pos_system_backup_$(date +%Y%m%d_%H%M%S).db 2>/dev/null && echo 'Database backed up' || echo 'No database to backup'",
    "db:dev:restore": "ls -la data/pos_system_backup_*.db 2>/dev/null || echo 'No backup files found'",
    "db:paths": "node migrate-existing-db.mjs show-paths",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check",
    "db:introspect": "drizzle-kit introspect",
    "db:bridge": "node scripts/bridge-migration.mjs"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@npmcli/map-workspaces": "5.0.2",
    "@playwright/test": "1.56.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@types/node": "24.10.1",
    "@types/pdfkit": "^0.17.3",
    "conventional-changelog-cli": "^5.0.0",
    "create-vite": "7.1.2",
    "electron": "^38.1.2",
    "electron-builder": "26.0.12",
    "glob": "^11.0.3",
    "playwright": "^1.55.0",
    "png2icons": "^2.0.1",
    "semantic-release": "^25.0.2",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@app/main": "*",
    "@stripe/stripe-js": "^8.0.0",
    "@stripe/terminal-js": "^0.24.0",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^16.6.1",
    "node-addon-api": "^8.3.0",
    "node-hid": "^3.2.0",
    "pdf-to-printer": "^5.6.1",
    "pdfkit": "^0.15.2",
    "serialport": "^13.0.0",
    "stripe": "^19.0.0",
    "usb": "^2.16.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
